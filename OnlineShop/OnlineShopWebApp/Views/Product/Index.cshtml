@model ProductViewModel
<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.ImagePath" class="card-img-top fixed-size" alt="image" style="object-fit: cover; height: 100%; width: 100%;">
        </div>
        <div class="col-md-8">
            <div class="card-body" style="background-color: rgba(255, 255, 255, 0.8); padding: 15px; position: relative; z-index: 1;">
                 <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">
                    <small class="text-body-secondary">Стоимость: @Model.Cost руб.</small>
                </p>
                <a asp-area="" asp-controller="Cart" asp-action="Add" asp-route-productId="@Model.Id" class="btn btn-success" style="margin-bottom: 10px;">Добавить в корзину</a>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-success">Продолжить покупки</a>
            </div>
        </div>
    </div>
</div>