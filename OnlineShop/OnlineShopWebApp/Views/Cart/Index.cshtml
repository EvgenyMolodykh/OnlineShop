@model Cart

@if (Model == null || Model.Items.Count == 0)
{
    <h5>Корзина пустая</h5>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Название</th>
                <th scope="col">Цена руб.</th>
                <th scope="col">Количество</th>
                <th scope="col">Стоимость</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Cost</td>
                    <td>@item.Amount</td>
                    <td>@item.Cost</td>
                    <td>
                        <a class="btn btn-success" href="/cart/decreaseAmount?productId=@item.Product.Id"> - </a>
                    </td>
                    <td>
                        <a class="btn btn-success" href="/cart/add?productId=@item.Product.Id"> + </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <h3>Итого: </h3>
        <h3>@Model.CostCart руб.</h3>
    </div>
    <div class="text-center">
        <a class="btn btn-success" asp-area="" asp-controller="Home" asp-action="Index">Продолжить покупки</a>
        <a class="btn btn-success" asp-area="" asp-controller="Order" asp-action="Buy">Оформить заказ </a>
        <a class="btn btn-danger" asp-area="" asp-controller="Cart" asp-action="Clear"> Очистить корзину </a>
    </div>

}