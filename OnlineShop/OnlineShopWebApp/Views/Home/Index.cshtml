@model List<ProductViewModel>

@{
	ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row rowstore">
        @foreach (var product in Model)
        {
            <div class="col-3">
                <div class="card card-custom" style="width: 18rem; margin-bottom: 20px;">
                    <img src="@product.ImagePath" class="card-img-top fixed-size" alt="pageProduct">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-area="" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">@product.Name</a>
                        </h5>
                        <p class="card-text">@product.Description</p>
                        <a asp-area="" asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id" class="btn btn-success text-dark">Добавить в корзину</a>
                     </div>
                </div>
            </div>
        }
    </div>
</div>
