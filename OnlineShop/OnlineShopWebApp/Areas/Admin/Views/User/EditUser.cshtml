@using OnlineShopWebApp.Models
@model UserAccount

<h3>Редактирование данных</h3>

<br />

<div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

<form method="post" asp-area="Admin" asp-controller="User" asp-action="EditUser">
    <input type="hidden" name="UserName" value="@Model.Name" />

    <div class="form-group">
        <label asp-for="Email">Email (Почта)</label>
        <br />
        <input asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email"></span>
    </div>

    <br />

    <div class="form-group">
        <label asp-for="Name">Имя</label>
        <br />
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name"></span>
    </div>

    <br />

    <div class="form-group">
        <label asp-for="LastName">Фамилия</label>
        <br />
        <input asp-for="LastName" class="form-control" required />
        <span asp-validation-for="LastName"></span>
    </div>

    <br />

    <div class="form-group">
        <label asp-for="Phone">Телефон</label>
        <br />
        <input asp-for="Phone" class="form-control" required />
        <span asp-validation-for="Phone"></span>
    </div>

    <br />

    <div class="text-center">
        <button type="submit" class="btn btn-success">Сохранить изменения</button>
    </div>
</form>
