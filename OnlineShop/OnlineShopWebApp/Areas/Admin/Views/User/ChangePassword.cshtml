@using OnlineShopWebApp.Areas.Admin.Models
@model ChangePassword

<h3>Смена пароля</h3>
<br />
<div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

<form method="post">
    <input type="hidden" name="UserName" value="@Model.UserName" />

    <div class="form-group">
        <label asp-for="Password">Введите пароль</label>
        <br/>
        <input asp-for="Password" class="form-control" required />
        <span asp-validation-for="Password"></span>
    </div>
    <br/>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Подтвертите пароль</label>
        <br />
        <input asp-for="ConfirmPassword" class="form-control" required />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <br />
    <div class="text-center">
        <button type="submit" class="btn btn-success" asp-area="Admin" asp-controller="User" asp-action="ChangePassword">Сменить пароль</button>
    </div>
</form>
