@model UserAccount

<div class="row">
	<div class="col-3">
		@await Html.PartialAsync("AdminLeftPanel")
	</div>

	<div class="col-9">
        <div class="container mt-5">
            <div class="card">
                <div class="card-header">
                    <h4>Пользователь @Model.Email</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-4"><strong>Имя</strong></div>
                        <div class="col-8">@Model.Name</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4"><strong>Фамилия</strong></div>
                        <div class="col-8">@Model.LastName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4"><strong>Email (логин)</strong></div>
                        <div class="col-8">@Model.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4"><strong>Номер телефона</strong></div>
                        <div class="col-8">@Model.Phone</div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="btn-group dropend">
                        <button type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            Действия
                        </button>
                        <ul class="dropdown-menu">
                            <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="ChangePassword" asp-route-name="@Model.Name">Смена пароля</a>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="EditUser" asp-route-name="@Model.Name">Редактирование данных</a>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="DeleteUser" asp-route-name="@Model.Name">Удалить</a>
                        </ul>
                    </div>
                </div> 
            </div>
        </div>
</div>


