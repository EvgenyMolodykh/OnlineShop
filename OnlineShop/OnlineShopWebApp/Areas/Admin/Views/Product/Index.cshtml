@model List<ProductViewModel>

<div class="row">
    <div class="col-3">
        @await Html.PartialAsync("AdminLeftPanel")
    </div>

    <div class="col-9">
        <h3>Список продуктов</h3>
        <br />
        <hr />
        <a class="btn btn-success" asp-area="Admin" asp-controller="Product" asp-action="AddProduct">Добавить продукт</a>
        <a class="btn btn-success" asp-area="Admin" asp-controller="Product" asp-action="AddProduct">Загрузить с помощью Exel</a>
        <hr />
        <br />
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Название продукта</th>
                            <th>Цена, руб</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model[i].Name</td>
                                <td>@Model[i].Cost</td>
                                <td><a class="btn btn-success" asp-area="Admin" asp-controller="Product" asp-action="EditProduct" asp-route-id="@Model[i].Id">Редактировать</a></td>
                                <td><a class="btn btn-danger" asp-area="Admin" asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@Model[i].Id">Удалить</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                
            </div>
        </div>
    </div>
</div>
