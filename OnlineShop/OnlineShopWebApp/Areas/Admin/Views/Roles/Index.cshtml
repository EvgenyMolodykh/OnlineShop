@using OnlineShopWebApp.Areas.Admin.Models
@model List<Role>

<div class="row">

    <div class="col-3">
        @await Html.PartialAsync("AdminLeftPanel")
    </div>

    <div class="col-9">
        <h3>Список ролей</h3>
        <br />
        <a class="btn btn-success" asp-area="Admin" asp-controller="Roles" asp-action="AddRole">Добавить новую роль</a>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Название роли</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model[i].Name</td>
                                <td>
                                    <a class="btn btn-success" asp-area="Admin" asp-controller="Roles" asp-action="RemoveRole" asp-route-roleName="@Model[i].Name">Удалить</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
