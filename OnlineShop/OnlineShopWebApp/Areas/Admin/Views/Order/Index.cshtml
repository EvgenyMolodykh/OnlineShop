@model List<OrderViewModel>

<div class="row">

    <div class="col-3">
        @await Html.PartialAsync("AdminLeftPanel")
    </div>

    <div class="col-9">
            <h3>Список заказов</h3>
            <br />
            <div class="row">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Сумма</th>
                                <th>Статус</th>
                                <th>Пользователь(логин)</th>
                                <th>Дата</th>
                                <th>Время</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@Model[i].CostOrders</td>
                                    <td>@EnumHelper.GetDisplayName(Model[i].Status)</td>
                                    <td>None</td>
                                    <td>@Model[i].CreateDateTime.ToString("d")</td>
                                    <td>@Model[i].CreateDateTime.ToString("t")</td>
                                    <td>
                                        <a class="btn btn-success" asp-area="Admin" asp-controller="Order" asp-action="OrderDetails" asp-route-id="@Model[i].Id">Подробнее</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
    </div>
</div>
