<Window x:Class="Autorization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autorization"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="LoginName_Label" 
            Grid.Column="0" 
            Grid.Row="0" 
            HorizontalAlignment="Right" 
            VerticalAlignment="Center">
        </Label>
        <Label x:Name="PersonalDesk_Label" 
                Grid.Column="2" 
                Grid.Row="0" 
                Content="Личный кабинет" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
        </Label>
        <Button x:Name="SingOut_Button" 
                Grid.Column="1" 
                Grid.Row="0" 
                Content="Выйти">
        </Button>
        <Button x:Name="SingIn_Button" 
            Grid.Column="1" 
            Grid.Row="1" 
            Content="Войти">
        </Button>
        <Button x:Name="Register_Button" 
            Grid.Column="2" 
            Grid.Row="1" 
            Content="Регистрация">
        </Button>
    </Grid>
</Window>
