<Window x:Class="Autorization.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autorization"
        mc:Ignorable="d"
        Title="Регистрация пользователя" Height="300" Width="400"
        Background="#FFC0D7EB">
    <Window.Resources>
        <Style x:Key="TextStyle" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#FF534C4C"/>
        </Style>
        <Style x:Key="ButtonStyleRegistration" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF0E160E"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="Login_Label" 
               Grid.Row="0" 
               Content="Регистрация" 
               Style="{StaticResource TextStyle}"/>
            <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label x:Name="Login_TextBlock"
                       Grid.Column="0" 
                       Grid.Row="1"
                       Content="Введите логин:" 
                       Style="{StaticResource TextStyle}"/>
            <TextBox x:Name="RegLogin_TextBox"
                     Grid.Column="1"
                     Grid.Row="0"
                     FontSize="20"
                     Width="200"
                     Margin="5"
                     HorizontalAlignment="Right"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label x:Name="Password_TextBlock"
               Grid.Column="0" 
               Grid.Row="1"
               Content="Введите пароль:" 
               Style="{StaticResource TextStyle}"/>
            <TextBox x:Name="RegPassword_TextBox"
                 Grid.Column="1"
                 Grid.Row="0"
                 FontSize="20"
                 Width="200"
                 Margin="5"
                 HorizontalAlignment="Right"/>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label x:Name="Confirm_TextBlock"
                   Grid.Column="0" 
                   Grid.Row="1"
                   Content="Подтвердите пароль:" 
                   Style="{StaticResource TextStyle}"/>
            <TextBox x:Name="ConfirmPassword_TextBox"
                     Grid.Column="1"
                     Grid.Row="0"
                     FontSize="20"
                     Width="200"
                     Margin="5"
                     HorizontalAlignment="Right"/>
        </Grid>
        <Button x:Name="Registration_Button"
                Grid.Row="4"
                Content="Зарегистрироваться"
                Width="170"
                Height="30"
                Style="{StaticResource ButtonStyleRegistration}" Background="#FF64CCF1"/>
        
    </Grid>
</Window>
