<Window x:Class="CalculatorWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="346" Width="297">
    <Window.Resources>
        <Style x:Key="NumberButton" TargetType="Button">
            <Setter Property="Margin" Value="14,0,14,0"/>
            <Setter Property="Height" Value="46"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        <Style x:Key="NumberAtion" TargetType="Button">
            <Setter Property="Margin" Value="14,0,14,0"/>
            <Setter Property="Height" Value="46"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="ResultTextBlock" 
                   Margin="0,20,14,0" 
                   TextWrapping="Wrap" 
                   Text="" 
                   VerticalAlignment="Top"
                   Height="33"
                   Grid.Row="0"
                   Grid.ColumnSpan="4" 
                   Background="#FFB6BDB6" 
                   FontSize="24" 
                   HorizontalAlignment="Right" 
                   Width="269"/>
        <Button Content="7" 
            Grid.Row="1" 
            Style="{StaticResource NumberButton}"/>
        <Button Content="8" 
            Grid.Row="1"
            Grid.Column="1"
            Style="{StaticResource NumberButton}" />
        <Button Content="9" 
            Grid.Row="1" 
            Grid.Column="2"
            Style="{StaticResource NumberButton}"/>
        <Button x:Name="SummButton" Content="+" 
            Grid.Row="1" 
            Grid.Column="3"
            Style="{StaticResource NumberAtion}"/>
        <Button Content="4" 
            Grid.Row="2"
            Style="{StaticResource NumberButton}"/>
        <Button Content="5" 
            Grid.Row="2" 
            Grid.Column="1"
            Style="{StaticResource NumberButton}"/>
        <Button Content="6" 
            Grid.Row="2" 
            Grid.Column="2"
            Style="{StaticResource NumberButton}"/>
        <Button x:Name="SubtractionButton" Content="-" 
            Grid.Row="2" 
            Grid.Column="3"
            Style="{StaticResource NumberAtion}"/>
        <Button Content="1" 
            Grid.Row="3" 
            Style="{StaticResource NumberButton}"/>
        <Button Content="2" 
           Grid.Row="3" 
           Grid.Column="1"
           Style="{StaticResource NumberButton}"/>
        <Button Content="3" 
            Grid.Row="3" 
            Grid.Column="2"
            Style="{StaticResource NumberButton}"/>
        <Button x:Name="MultiplicationButton" Content="X" 
            Grid.Row="3" 
            Grid.Column="3"
            Style="{StaticResource NumberAtion}"/>
        <Button x:Name="ClearButton" Content="C" 
            Grid.Row="4" 
            Style="{StaticResource NumberButton}"
                Background="Red"
                Foreground="White" Click="ClearButton_Click"/>
        <Button x:Name="ZeroButton" Content="0" 
            Grid.Row="4" 
            Grid.Column="1"
            Style="{StaticResource NumberButton}" Click="ZeroButton_Click"/>
        <Button x:Name="ResultButton" Content="=" 
            Grid.Row="4" 
            Grid.Column="2"
            Style="{StaticResource NumberAtion}"/>
        <Button x:Name="DivideButton" Content="/" 
            Grid.Row="4" 
            Grid.Column="3"
            Style="{StaticResource NumberAtion}"/>
    </Grid>

</Window>
